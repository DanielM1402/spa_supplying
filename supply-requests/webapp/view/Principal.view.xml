<mvc:View
    xmlns:c="sap.ui.core"
    controllerName="pe.umadev.supplyrequests.controller.Principal"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
    <f:DynamicPage
        id="dynamicPageId"
        preserveHeaderStateOnScroll="true"
        headerExpanded="{/headerExpanded}"
        showFooter="true"
        fitContent="true"
    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title
                        id="idTitle"
                        text="Header Title CI/CD UPDATED V2"
                    />
                </f:heading>
                <f:expandedContent>
                    <Label
                        id="idLabelTitle"
                        text="This is a subheading"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="idLabelTitle2"
                        text="This is a subheading"
                    />
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title
                        id="idTitle3"
                        text="This is a subheading"
                    />
                </f:snappedTitleOnMobile>
                <f:content>
                    <OverflowToolbar id="idOverflowToolbar1">
                        <GenericTag
                            id="idGenericTag1"
                            text="SR"
                            status="Error"
                            press="onGenericTagPress"
                            design="StatusIconHidden"
                        >
                            <ObjectNumber
                                id="idObjectNumber1"
                                number="2"
                                unit="M"
                                emphasized="false"
                                state="Error"
                            />
                        </GenericTag>
                    </OverflowToolbar>
                </f:content>
                <f:actions>
                    <ToolbarSpacer id="idToolbarSpacer1" />
                    <Button
                        id="idButton1"
                        text="Edit"
                        type="Emphasized"
                    />
                    <Button
                        id="idButton2"
                        text="Delete"
                        type="Transparent"
                    />
                    <Button
                        id="idButton3"
                        text="Copy"
                        type="Transparent"
                    />
                    <Button
                        id="idButton4"
                        icon="sap-icon://action"
                        type="Transparent"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader
                pinnable="true"
                id="idDynamicPageHeader1"
            >
                <FlexBox
                    id="idFlexBox"
                    alignItems="Start"
                    justifyContent="SpaceBetween"
                >
                    <items>
                        <Panel
                            id="idPanel"
                            backgroundDesign="Transparent"
                            class="sapUiNoContentPadding"
                        >
                            <content>
                                <layout:HorizontalLayout
                                    id="idHorizontalLayout"
                                    allowWrapping="true"
                                >
                                    <layout:VerticalLayout
                                        id="idVerticalLayout"
                                        class="sapUiMediumMarginEnd"
                                    >
                                        <ObjectAttribute
                                            id="idObjectAttribute1"
                                            title="Location"
                                            text="Warehouse A"
                                        />
                                        <ObjectAttribute
                                            id="idObjectAttribute2"
                                            title="Halway"
                                            text="23L"
                                        />
                                        <ObjectAttribute
                                            id="idObjectAttribute3"
                                            title="Rack"
                                            text="34"
                                        />
                                    </layout:VerticalLayout>
                                    <layout:VerticalLayout
                                        id="idVerticalLayout1"
                                    >
                                        <ObjectAttribute
                                            id="idObjectAttribute6"
                                            title="Availability"
                                        />
                                        <ObjectStatus
                                            id="idObjectStatus10"
                                            text="In Stock"
                                            state="Success"
                                        />
                                    </layout:VerticalLayout>
                                </layout:HorizontalLayout>
                            </content>
                        </Panel>
                    </items>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <t:Table
                id="idTable"
                rows="{/ProductCollection}"
                selectionMode="MultiToggle"
                rowMode="Auto"
            >
                <t:extension>
                    <OverflowToolbar
                        id="idOverflowToolbar"
                        style="Clear"
                    >
                        <Title
                            id="idTitle11"
                            text="Products"
                        />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column
                        id="idColumn1"
                        width="11rem"
                    >
                        <Label
                            id="idLabel1"
                            text="Product Name"
                        />
                        <t:template>
                            <Text
                                id="idText11"
                                text="{Name}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn2"
                        width="11rem"
                    >
                        <Label
                            id="idLabel2"
                            text="Product Id"
                        />
                        <t:template>
                            <Input
                                id="idInput2"
                                value="{ProductId}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn3"
                        width="6rem"
                        hAlign="End"
                    >
                        <Label
                            id="idLabel3"
                            text="Quantity"
                        />
                        <t:template>
                            <Label
                                id="idLabel31"
                                text="{Quantity}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn4"
                        width="9rem"
                    >
                        <Label
                            id="idLabel4"
                            text="Status"
                        />
                        <t:template>
                            <ObjectStatus
                                id="idObjectStatus4"
                                text="{Status}"
                                state="Success"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn5"
                        width="9rem"
                    >
                        <Label
                            id="idLabel5"
                            text="Price"
                        />
                        <t:template>
                            <u:Currency
                                id="idCurrency5"
                                value="{Price}"
                                currency="{CurrencyCode}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn6"
                        width="12rem"
                    >
                        <Label
                            id="idLabel6"
                            text="Supplier"
                        />
                        <t:template>
                            <ComboBox
                                id="idComboBox6"
                                value="{SupplierName}"
                                items="{path:'/Suppliers' ,templateShareable:true}"
                            >
                                <c:Item
                                    id="idComboBoxItem6"
                                    text="{Name}"
                                />
                            </ComboBox>
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn7"
                        width="9rem"
                    >
                        <Label
                            id="idLabel7"
                            text="Image"
                        />
                        <t:template>
                            <Link
                                id="idLink7"
                                text="Show Image"
                                href="{ProductPicUrl}"
                                target="_blank"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn8"
                        width="9rem"
                    >
                        <Label
                            id="idLabel8"
                            text="Details"
                        />
                        <t:template>
                            <Button
                                id="idButton8"
                                text="Show Details"
                                press="handleDetailsPress"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn9"
                        width="7rem"
                    >
                        <Label
                            id="idLabel9"
                            text="Heavy Weight"
                        />
                        <t:template>
                            <CheckBox
                                id="idCheckBox9"
                                selected="{
								path: 'Heavy',
								type: 'sap.ui.model.type.String'
							}"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn10"
                        width="12rem"
                    >
                        <Label
                            id="idLabel10"
                            text="Category"
                        />
                        <t:template>
                            <Select
                                id="idSelect10"
                                selectedKey="{Category}"
                                items="{path:'/Categories' ,templateShareable:true}"
                            >
                                <c:Item
                                    id="idItemSelect10"
                                    text="{Name}"
                                    key="{Name}"
                                />
                            </Select>
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn11"
                        width="6rem"
                        hAlign="Center"
                    >
                        <Label
                            id="idLabel11"
                            text="Status"
                        />
                        <t:template>
                            <c:Icon
                                id="idIcontemplate11"
                                src="sap-icon://accept"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column
                        id="idColumn12"
                        width="11rem"
                        hAlign="Center"
                    >
                        <Label
                            id="idLabel12"
                            text="Delivery Date"
                        />
                        <t:template>
                            <DatePicker
                                id="idDatePicker12"
                                value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"
                            />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar id="idOverflowToolbar2">
                <Button
                    id="idButton21"
                    icon="sap-icon://message-popup"
                    text="{/messagesLength}"
                    type="Emphasized"
                    press="onMessageButtonPress"
                    visible="{= !!${/messagesLength}}"
                />
                <ToolbarSpacer id="idToolbarSpacer21" />
                <Button
                    id="idButton22"
                    type="Accept"
                    text="Accept"
                />
                <Button
                    id="idButton23"
                    type="Reject"
                    text="Reject"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
